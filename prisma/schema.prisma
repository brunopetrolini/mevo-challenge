generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id
  to          String
  from        String
  amount      Int
  fileName    String
  processedAt DateTime @default(now()) @map("processed_at")

  @@map("transactions")
}

model TransactionResume {
  id                String @id @default(uuid())
  reason            String
  fileName          String
  totalNonProcessed String @map("total_non_processed")

  @@map("transactions_resume")
}
